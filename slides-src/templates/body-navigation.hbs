<table width=100% cellpadding=0 cellspacing=0 border=0>
    <tr>
            <td width="25%" align="left" valign=top>
            {{#if prevSlide}}
                <a href="{{prevSlide}}" target=_top><font face="Arial, sans-serif" size="4"  color={{ theme.text }}>&lt; Prev</font></a>
            {{else}}
                &nbsp;
            {{/if}}
            </td>
            <td width="25%" align="center" valign=top>
                <a href="/slides/index" target=_top><font face="Arial, sans-serif" size="2"  color={{ theme.text }}>Index</font></a> |
                <b><script>
                    function pad(v) {
                        return (v < 10 ? '0' : '') + v;
                    }
                    var d = new Date();
                    var h = d.getHours();
                    var m = d.getMinutes();
                    document.write(
                        pad(h) +
                         "<blink>:</blink>" + 
                        pad(m)
                    );
                </script></b>
            </td>
            <td width="25%" align="right" valign=top>
            {{#if nextSlide}}
                <a href="{{nextSlide}}" target=_top><font face="Arial, sans-serif" size="4" color={{ theme.text }}>Next &gt;</font></a>
            {{else}}
                &nbsp;
            {{/if}}
            </td>
    </tr>
</table>
